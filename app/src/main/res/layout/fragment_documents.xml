<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Documents">

    <ScrollView
        android:contentDescription="@string/none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/document_info"
                android:adjustViewBounds="true"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10dp">

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="135dp"
                    android:layout_height="35dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/change_patient"
                    android:contentDescription="@string/none"
                    tools:ignore="TouchTargetSizeCheck" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="135dp"
                    android:layout_height="35dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/edit_patient_info"
                    android:contentDescription="@string/none"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/accent"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <ImageButton
                    android:id="@+id/imageButton8"
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@drawable/qr_sync"
                    android:contentDescription="@string/none"
                    tools:ignore="TouchTargetSizeCheck"
                    android:layout_marginEnd="10dp"/>

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/ocr_button"
                    android:contentDescription="@string/none"
                    tools:ignore="TouchTargetSizeCheck" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/imageButton6"
                    android:layout_width="160dp"
                    android:layout_height="35dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/new_document"
                    android:contentDescription="@string/none"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/big_search"
                android:adjustViewBounds="true"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="20dp"/>

            <ImageView
                android:id="@+id/imageView33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/documents"
                android:layout_marginBottom="30dp"/>


        </LinearLayout>
    </ScrollView>
</FrameLayout>