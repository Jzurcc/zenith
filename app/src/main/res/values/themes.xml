<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Zenith" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/moonstone</item>
        <item name="colorPrimaryVariant">@color/caribbean</item>
        <item name="colorOnPrimary">@color/coral</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/coral</item>
        <item name="colorSecondaryVariant">@color/tangerine</item>
        <item name="colorOnSecondary">@color/moonstone</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Zenith.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Zenith.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="Header">
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textColor">@color/moonstone</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <style name="SelectedAppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

</resources>